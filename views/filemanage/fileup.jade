extends mypageframe

block content
  form(action= 'upload' method='post' enctype="multipart/form-data")
    div
      label 제목:
      input(type='text' name='title')
  p
    div
      label 주차:
      select(name='weeks')
        option(value='') 주차
        for item, i in ['1주차','2주차','3주차','4주차','5주차','6주차',]
          option(value= i+1)= item
  p
    div
      label 분류:
      select(name='type')
        option(value='') 유형
        option(value='note') 강의노트
        option(value='present') 발표자료
        option(value='report') 과제물
  p
    div
      label 파일:
      input(type='file' name='userfile')
  p
    div
      input(type='submit')
